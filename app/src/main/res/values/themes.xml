<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FFT" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#147650</item>
        <item name="colorPrimaryVariant">#0f573b</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#22cb8a</item>
        <item name="colorSecondaryVariant">#5b9f85</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>
    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">#4c565b</item>
    </style>
    <style name="Button.Transparent" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">#00000000</item>
        <item name="colorOnPrimary">#4c565b</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="Theme.FFT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>